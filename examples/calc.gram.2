EXTEND
  e_star: [ [ x = e LEVEL "*" -> x ] ] ;

  e: AFTER "**"
    [ NONA [ x = INT -> int_of_string x
      | "("; x = e; ")" -> x ] ]
  ;

  e: BEFORE "*"
    [ LEFTA [ x1 = e; "+"; y = e -> x1 + y
      | x2 = e; "-"; y = e -> x2 - y ]
    ]
  ;

  e: AFTER "*"
    [ "**" RIGHTA [ x = e; "**"; y = e -> pow x  y ]
    ]
  ;

  e:
    [ "*" LEFTA [ x = e; "*"; y = e -> x * y
      | x = e; "/"; y = e -> x / y ] ]
  ;

  f: AFTER "**"
    [ [ x = INT -> int_of_string x
      | "("; x = f; ")" -> x ] ]
  ;

  f: BEFORE "*"
    [ LEFTA [ x = f; "+"; y = f -> x + y
      | x = f; "-"; y = f -> x - y ]
    ]
  ;

  f: AFTER "*"
    [ "**" RIGHTA [ x = f; "**"; y = f -> pow x  y ]
    ]
  ;

  f:
    [ "*" LEFTA [ x = f; "*"; y = f -> x * y
      | x = f; "/"; y = f -> x / y ] ]
  ;

END;
